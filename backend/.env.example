# AI Provider: "openrouter" or "gemini"
AI_PROVIDER=openrouter

# OpenRouter API Key (OPTIONAL - free tier works without it)
# Get from: https://openrouter.ai/keys
OPENROUTER_API_KEY=

# Google Gemini API Key (only needed if AI_PROVIDER=gemini)
# Get from: https://makersuite.google.com/app/apikey
GOOGLE_API_KEY=

# Pinecone API Key (for vector database RAG)
# Get from: https://app.pinecone.io
PINECONE_API_KEY=

# OpenAI API Key (for embeddings: text-embedding-ada-002)
# Get from: https://platform.openai.com/api-keys
OPENAI_EMBEDDING_KEY=

# Operation Mode (PRE_PURCHASE or POST_PURCHASE)
MODE=PRE_PURCHASE

# Brand Configuration
BRAND_NAME=TechHome
PRODUCT_CATEGORY=home_appliances

# Default Product (optional - can be set per-session via API)
# DEFAULT_PRODUCT_ID=wm_2026_pro
# DEFAULT_MODEL_ID=AT-WM-9KG-BLACK

# Backend Configuration
HOST=0.0.0.0
PORT=8000

# Frontend URL (for CORS)
FRONTEND_URL=http://localhost:5173
